{
  "type": "module",
  "name": "@michalporeba/repo-watcher",
  "version": "0.0.1",
  "description": "A library for collecting and analysing (GitHub) code repository statistics.",
  "main": "src/index.js",
  "scripts": {
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js ./tests/unit/",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js ./tests/integration/",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js ./tests/"
  },
  "keywords": [],
  "author": "michalporeba@gmail.com",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^20.0.2"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "prettier": "^3.2.5",
    "prettier-eslint": "^16.3.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/tests/integration/**/*.js",
      "**/tests/unit/**/*.js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover"
    ]
  }
}
